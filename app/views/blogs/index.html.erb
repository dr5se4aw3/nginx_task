<h2>ブログ一覧</h2>
  <p><%= notice %></p>

<table>
  <tr>
    <td>タイトル</td>
    <td>内容</td>
  </tr>
  <% @blogs.each do |blog| %>
    <tr>
      <td><%= blog.title %></td>
      <td><%= blog.content %></td>
      <td><%= link_to '詳細を確認する', blog_path(blog.id)%></td>
      <td><%= link_to 'ブログを編集する', edit_blog_path(blog.id), data: {confirm: '本当に編集しますか？'} %></td>
      <td><%= link_to 'ブログを削除する', blog_path(blog.id), method: :delete, data: {confirm: '本当に削除しますか？'} %></td>
    </tr>
  <% end %>
</table>
<p><%= link_to 'ブログ一覧画面へ', blogs_path %></p>
<p><%= link_to '新しくブログを投稿する', new_blog_path %></p>
